{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "type-enum": [
            0,
            "always",
            [
                "feat",
                "fix",
                "docs",
                "style",
                "refactor",
                "test",
                "revert",
                "chore",
                "perf"
            ]
        ],
        "scope-empty": [
            2,
            "never",
            [
                "lowerCase"
            ]
        ],
        "scope-min-length": [
            2,
            "always",
            3
        ],
        "scope-max-length": [
            2,
            "always",
            20
        ],
        "subject-empty": [
            0,
            "always",
            [
                "lowerCase"
            ]
        ],
        "subject-case": [
            2,
            "always",
            [
                "sentence-case",
                "start-case",
                "pascal-case",
                "upper-case"
            ]
        ],
        "header-max-length": [
            0,
            "always",
            120
        ],
        "footer-max-line-length": [
            2,
            "always",
            100
        ]
    }
}
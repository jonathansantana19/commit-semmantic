{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "scope-empty": [
            0,
            "always",
            [
                "lowerCase"
            ]
        ],
        "scope-enum": [
            2,
            "always",
            [
                "teste",
                "apresentacao"
            ]
        ],
        "subject-case": [
            2,
            "always",
            [
                "sentence-case",
                "start-case",
                "pascal-case",
                "upper-case"
            ]
        ],
        "header-max-length": [
            0,
            "always",
            72
        ],
        "type-enum": [
            0,
            "always",
            [
                "feat",
                "fix",
                "docs",
                "style",
                "refactor",
                "test",
                "revert"
            ]
        ]
    }
}